generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Url {
  id         String    @id
  shortCode  String    @unique
  longUrl    String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime?
  clickCount Int       @default(0)

  @@index([shortCode])
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
